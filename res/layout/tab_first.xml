<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
                android:id="@+id/news_selector"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/blue_selected"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp">
            <TextView
                    android:id="@+id/news_selector_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="学校要闻"
                    android:textColor="@color/white"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/notice_selector"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/white_unselected"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp">
            <TextView
                    android:id="@+id/notice_selector_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="通知公告"
                    />
        </LinearLayout>
    </LinearLayout>

    <ListView
            android:id="@+id/news_listview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
    </ListView>

</LinearLayout>